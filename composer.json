{
  "name": "elliottrichmond/register-custom-block-styles",
  "version": "1.0",
  "type": "package",
  "description": "A reusable class to register custom block styles with associated stylesheets from the active theme.",
  "keywords": [
    "WordPress",
    "Plugins",
    "Register Custom Block Styles",
    "Themes"
  ],
  "homepage": "https://elliottrichmond.co.uk",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Elliott Richmond",
      "homepage": "https://elliottrichmond.co.uk"
    }
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.0",
    "wp-cli/i18n-command": "^2"
  },
  "scripts": {
    "format": "phpcbf --standard=phpcs.xml.dist --report-summary --report-source",
    "lint": "phpcs --standard=phpcs.xml.dist",
    "makepot": "wp i18n make-pot ."
  }
}
